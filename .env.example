# Server Configuration
NODE_ENV=development
PORT=3000
SESSION_SECRET=your-super-secret-session-key-change-this

# Discord OAuth Configuration (for login only, no bot needed)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback
DISCORD_SERVER_ID=your-discord-server-id

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Google Forms URLs (Create these forms and paste the URLs here)
FORM_LOGIN_SERVICES=https://docs.google.com/forms/d/e/YOUR_FORM_ID/viewform
FORM_NO_LOGIN_SERVICES=https://docs.google.com/forms/d/e/YOUR_FORM_ID/viewform

# Google Forms Prefill Entry IDs (Get these from form URL parameters)
# Format: entry.123456789 (find these by prefilling a form and checking URL)
FORM_LOGIN_DISCORD_ID_ENTRY=entry.123456789
FORM_LOGIN_DISCORD_USERNAME_ENTRY=entry.987654321
FORM_NO_LOGIN_DISCORD_ID_ENTRY=entry.111111111
FORM_NO_LOGIN_DISCORD_USERNAME_ENTRY=entry.222222222

# Database
DATABASE_PATH=./data/aco.db

# Application URL
APP_URL=http://localhost:3000

# Discord Bot Integration
DISCORD_BOT_API_SECRET=your-shared-secret-between-web-and-bot
DISCORD_BOT_API_URL=http://localhost:3001
DROP_ANNOUNCEMENT_CHANNEL_ID=your-discord-channel-id-for-drop-announcements

# Admin Discord Notifications
ADMIN_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
