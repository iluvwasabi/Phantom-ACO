<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Panels - Phantom ACO Admin</title>
  <link rel="stylesheet" href="/css/dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="shell">
    <!-- Header -->
    <header class="header">
      <div class="header-inner">
        <div class="brand">
          <div class="brand-mark"></div>
          <span class="brand-name"><%= brandName || 'Phantom ACO' %></span>
          <span style="margin-left: 12px; padding: 4px 12px; background: rgba(239, 68, 68, 0.2); color: #ef4444; border-radius: 999px; font-size: 0.75rem; font-weight: 600;">ADMIN</span>
        </div>
        <div class="header-actions">
          <a href="/admin" class="btn btn-ghost">Admin Home</a>
          <a href="/dashboard" class="btn btn-ghost">User Dashboard</a>
          <a href="/auth/logout" class="btn btn-ghost">Logout</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="toolbar">
        <h1 class="title">Manage Service Panels</h1>
        <button class="btn btn-primary" id="add-panel-btn">+ Add New Panel</button>
      </div>

      <!-- Panels Table -->
      <div class="submissions-table">
        <table>
          <thead>
            <tr>
              <th>Order</th>
              <th>Service Name</th>
              <th>Type</th>
              <th>Description</th>
              <th>Color</th>
              <th>Status</th>
              <th>Products</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% panels.forEach(panel => { %>
              <tr data-panel-id="<%= panel.id %>">
                <td><%= panel.display_order %></td>
                <td><strong><%= panel.service_name %></strong></td>
                <td>
                  <% if (panel.service_type === 'login_required') { %>
                    <div class="badge badge-info">Login Required</div>
                  <% } else { %>
                    <div class="badge badge-success">No Login</div>
                  <% } %>
                </td>
                <td style="white-space: pre-line;"><%= panel.description %></td>
                <td>
                  <div style="width: 60px; height: 30px; border-radius: 6px; background: <%= panel.color_gradient %>;"></div>
                </td>
                <td>
                  <% if (panel.is_active) { %>
                    <div class="badge badge-success">Active</div>
                  <% } else { %>
                    <div class="badge" style="background: rgba(148, 163, 184, 0.2); color: var(--muted);">Inactive</div>
                  <% } %>
                </td>
                <td>
                  <%
                    const productsArray = panel.products ? JSON.parse(panel.products) : [];
                  %>
                  <div class="badge" style="background: rgba(99, 102, 241, 0.2); color: #6366f1;">
                    <%= productsArray.length %> item<%= productsArray.length === 1 ? '' : 's' %>
                  </div>
                </td>
                <td>
                  <div class="submission-actions">
                    <button class="btn btn-sm btn-primary edit-panel-btn" data-panel-id="<%= panel.id %>">‚úèÔ∏è Edit</button>
                    <button class="btn btn-sm manage-products-btn" style="background: rgba(99, 102, 241, 0.2); color: #6366f1;" data-panel-id="<%= panel.id %>" data-service-id="<%= panel.service_id %>">üõçÔ∏è Products</button>
                    <button class="btn btn-sm btn-danger delete-panel-btn" data-panel-id="<%= panel.id %>">üóëÔ∏è Delete</button>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Edit Panel Modal -->
  <div id="edit-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true">
      <div class="dialog-header">
        <h2 id="modal-title">Edit Panel</h2>
        <button class="icon-btn close-edit-modal" aria-label="Close">‚úï</button>
      </div>
      <div class="dialog-body">
        <form id="panel-form" class="form-grid">
          <input type="hidden" id="panel-id">

          <div class="field wide">
            <label class="label">Service Name</label>
            <input type="text" id="service-name" class="control" required>
          </div>

          <div class="field">
            <label class="label">Service Type</label>
            <select id="service-type" class="control" required>
              <option value="login_required">Login Required</option>
              <option value="no_login">No Login</option>
            </select>
          </div>

          <div class="field">
            <label class="label">Display Order</label>
            <input type="number" id="display-order" class="control" required>
          </div>

          <div class="field wide">
            <label class="label">Description</label>
            <textarea id="description" class="control" rows="3"></textarea>
          </div>

          <div class="field wide">
            <label class="label">Color Gradient (CSS)</label>
            <input type="text" id="color-gradient" class="control" placeholder="linear-gradient(135deg, #cc0000, #ff0000)">
          </div>

          <div class="field">
            <label class="label">Status</label>
            <select id="is-active" class="control">
              <option value="1">Active</option>
              <option value="0">Inactive</option>
            </select>
          </div>

          <div class="field">
            <label class="label">Submission Limit</label>
            <select id="submission-limit" class="control">
              <option value="0">Unlimited</option>
              <option value="1">1 Submission</option>
              <option value="2">2 Submissions</option>
              <option value="3">3 Submissions</option>
              <option value="4">4 Submissions</option>
              <option value="5">5 Submissions</option>
            </select>
          </div>
        </form>
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost close-edit-modal">Cancel</button>
        <button class="btn btn-primary" id="save-panel-btn">Save Changes</button>
      </div>
    </div>
  </div>

  <!-- Add Panel Modal -->
  <div id="add-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true">
      <div class="dialog-header">
        <h2>Add New Panel</h2>
        <button class="icon-btn close-add-modal" aria-label="Close">‚úï</button>
      </div>
      <div class="dialog-body">
        <form id="add-panel-form" class="form-grid">
          <div class="field wide">
            <label class="label">Service ID (lowercase, no spaces)</label>
            <input type="text" id="add-service-id" class="control" required>
          </div>

          <div class="field wide">
            <label class="label">Service Name</label>
            <input type="text" id="add-service-name" class="control" required>
          </div>

          <div class="field">
            <label class="label">Service Type</label>
            <select id="add-service-type" class="control" required>
              <option value="login_required">Login Required</option>
              <option value="no_login">No Login</option>
            </select>
          </div>

          <div class="field">
            <label class="label">Display Order</label>
            <input type="number" id="add-display-order" class="control" value="99" required>
          </div>

          <div class="field wide">
            <label class="label">Description</label>
            <textarea id="add-description" class="control" rows="3"></textarea>
          </div>

          <div class="field wide">
            <label class="label">Color Gradient (CSS)</label>
            <input type="text" id="add-color-gradient" class="control" placeholder="linear-gradient(135deg, #cc0000, #ff0000)">
          </div>

          <div class="field">
            <label class="label">Submission Limit</label>
            <select id="add-submission-limit" class="control">
              <option value="0">Unlimited</option>
              <option value="1">1 Submission</option>
              <option value="2">2 Submissions</option>
              <option value="3">3 Submissions</option>
              <option value="4">4 Submissions</option>
              <option value="5">5 Submissions</option>
            </select>
          </div>
        </form>
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost close-add-modal">Cancel</button>
        <button class="btn btn-primary" id="create-panel-btn">Create Panel</button>
      </div>
    </div>
  </div>

  <!-- Products Management Modal -->
  <div id="products-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true" style="max-width: 800px;">
      <div class="dialog-header">
        <h2 id="products-modal-title">Manage Products</h2>
        <button class="icon-btn close-products-modal" aria-label="Close">‚úï</button>
      </div>
      <div class="dialog-body">
        <div style="margin-bottom: 16px;">
          <p style="color: var(--muted); margin-bottom: 16px;">Add checkout items for this drop. Each product can have a max quantity and max checkouts limit.</p>
          <div id="products-list">
            <!-- Products will be rendered here -->
          </div>
          <button class="btn btn-ghost" id="add-product-btn" style="margin-top: 12px;">+ Add Product</button>
        </div>
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost close-products-modal">Cancel</button>
        <button class="btn btn-primary" id="save-products-btn">Save Products</button>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="toast" class="toast" aria-live="polite"></div>

  <script>
    let panels = <%- JSON.stringify(panels) %>;
    let currentEditingPanelId = null;
    let currentEditingServiceId = null;
    let currentProducts = [];

    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    function editPanel(id) {
      console.log('Editing panel:', id);
      console.log('Available panels:', panels);
      const panel = panels.find(p => p.id === id);
      if (!panel) {
        console.error('Panel not found:', id);
        showToast('Panel not found');
        return;
      }

      document.getElementById('panel-id').value = panel.id;
      document.getElementById('service-name').value = panel.service_name;
      document.getElementById('service-type').value = panel.service_type;
      document.getElementById('display-order').value = panel.display_order;
      document.getElementById('description').value = panel.description || '';
      document.getElementById('color-gradient').value = panel.color_gradient || '';
      document.getElementById('is-active').value = panel.is_active ? '1' : '0';
      document.getElementById('submission-limit').value = panel.submission_limit || '0';

      document.getElementById('edit-modal').classList.add('show');
    }

    function closeModal() {
      document.getElementById('edit-modal').classList.remove('show');
    }

    function closeAddModal() {
      document.getElementById('add-modal').classList.remove('show');
    }

    function openAddPanel() {
      document.getElementById('add-modal').classList.add('show');
    }

    async function savePanel() {
      const id = document.getElementById('panel-id').value;
      const data = {
        service_name: document.getElementById('service-name').value,
        description: document.getElementById('description').value,
        color_gradient: document.getElementById('color-gradient').value,
        is_active: document.getElementById('is-active').value === '1',
        display_order: parseInt(document.getElementById('display-order').value),
        submission_limit: parseInt(document.getElementById('submission-limit').value)
      };

      try {
        const response = await fetch(`/admin/panels/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          showToast('Panel updated successfully!');
          closeModal();
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast('Failed to update panel');
        }
      } catch (error) {
        console.error('Save error:', error);
        showToast('Error updating panel');
      }
    }

    async function createPanel() {
      const data = {
        service_id: document.getElementById('add-service-id').value,
        service_name: document.getElementById('add-service-name').value,
        service_type: document.getElementById('add-service-type').value,
        description: document.getElementById('add-description').value,
        color_gradient: document.getElementById('add-color-gradient').value,
        display_order: parseInt(document.getElementById('add-display-order').value),
        submission_limit: parseInt(document.getElementById('add-submission-limit').value)
      };

      try {
        const response = await fetch('/admin/panels', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          showToast('Panel created successfully!');
          closeAddModal();
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast('Failed to create panel');
        }
      } catch (error) {
        console.error('Create error:', error);
        showToast('Error creating panel');
      }
    }

    async function deletePanel(id) {
      if (!confirm('Are you sure you want to delete this panel?')) return;

      try {
        const response = await fetch(`/admin/panels/${id}`, {
          method: 'DELETE',
          credentials: 'same-origin'
        });

        const result = await response.json();
        if (result.success) {
          showToast('Panel deleted successfully!');
          const row = document.querySelector(`tr[data-panel-id="${id}"]`);
          if (row) row.remove();
        } else {
          showToast('Failed to delete panel');
        }
      } catch (error) {
        console.error('Delete error:', error);
        showToast('Error deleting panel');
      }
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', () => {
      // Edit panel buttons
      document.querySelectorAll('.edit-panel-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const panelId = parseInt(btn.getAttribute('data-panel-id'));
          editPanel(panelId);
        });
      });

      // Delete panel buttons
      document.querySelectorAll('.delete-panel-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const panelId = parseInt(btn.getAttribute('data-panel-id'));
          deletePanel(panelId);
        });
      });

      // Add panel button
      document.getElementById('add-panel-btn').addEventListener('click', () => {
        document.getElementById('add-modal').classList.add('show');
      });

      // Close edit modal buttons
      document.querySelectorAll('.close-edit-modal').forEach(btn => {
        btn.addEventListener('click', closeModal);
      });

      // Close add modal buttons
      document.querySelectorAll('.close-add-modal').forEach(btn => {
        btn.addEventListener('click', () => {
          document.getElementById('add-modal').classList.remove('show');
        });
      });

      // Save panel button
      document.getElementById('save-panel-btn').addEventListener('click', savePanel);

      // Create panel button
      document.getElementById('create-panel-btn').addEventListener('click', createPanel);

      // Manage products buttons
      document.querySelectorAll('.manage-products-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const panelId = parseInt(btn.getAttribute('data-panel-id'));
          const serviceId = btn.getAttribute('data-service-id');
          openProductsModal(panelId, serviceId);
        });
      });

      // Close products modal
      document.querySelectorAll('.close-products-modal').forEach(btn => {
        btn.addEventListener('click', () => {
          document.getElementById('products-modal').classList.remove('show');
        });
      });

      // Add product button
      document.getElementById('add-product-btn').addEventListener('click', addProductRow);

      // Save products button
      document.getElementById('save-products-btn').addEventListener('click', saveProducts);
    });

    // Products management functions
    function openProductsModal(panelId, serviceId) {
      currentEditingPanelId = panelId;
      currentEditingServiceId = serviceId;

      // Fetch current products
      fetch(`/admin/api/panels/${serviceId}/products`)
        .then(res => res.json())
        .then(data => {
          currentProducts = data.products || [];
          renderProductsList();
          document.getElementById('products-modal').classList.add('show');
        })
        .catch(error => {
          console.error('Error fetching products:', error);
          showToast('Error loading products');
        });
    }

    function renderProductsList() {
      const container = document.getElementById('products-list');

      if (currentProducts.length === 0) {
        container.innerHTML = '<p style="color: var(--muted); text-align: center; padding: 20px;">No products added yet. Click "+ Add Product" to get started.</p>';
        return;
      }

      container.innerHTML = currentProducts.map((product, idx) => `
        <div class="product-row" style="display: grid; grid-template-columns: 2fr 1fr 1fr auto; gap: 12px; align-items: center; padding: 12px; background: var(--surface-100); border: 1px solid var(--border); border-radius: 8px; margin-bottom: 8px;">
          <div class="field" style="margin: 0;">
            <label class="label" style="font-size: 0.85rem;">Product Name</label>
            <input type="text" class="control" value="${product.name || ''}" data-idx="${idx}" data-field="name" onchange="updateProduct(${idx}, 'name', this.value)">
          </div>
          <div class="field" style="margin: 0;">
            <label class="label" style="font-size: 0.85rem;">Max Qty</label>
            <input type="number" class="control" value="${product.max_qty || 1}" min="1" max="10" data-idx="${idx}" data-field="max_qty" onchange="updateProduct(${idx}, 'max_qty', parseInt(this.value))">
          </div>
          <div class="field" style="margin: 0;">
            <label class="label" style="font-size: 0.85rem;">Max Checkouts</label>
            <input type="number" class="control" value="${product.max_checkouts || 1}" min="1" max="10" data-idx="${idx}" data-field="max_checkouts" onchange="updateProduct(${idx}, 'max_checkouts', parseInt(this.value))">
          </div>
          <button class="btn btn-sm btn-danger" onclick="removeProduct(${idx})" style="margin-top: 20px;">üóëÔ∏è</button>
        </div>
      `).join('');
    }

    function addProductRow() {
      currentProducts.push({
        name: '',
        max_qty: 1,
        max_checkouts: 1
      });
      renderProductsList();
    }

    function updateProduct(idx, field, value) {
      if (currentProducts[idx]) {
        currentProducts[idx][field] = value;
      }
    }

    function removeProduct(idx) {
      currentProducts.splice(idx, 1);
      renderProductsList();
    }

    async function saveProducts() {
      // Validate that all products have names
      const invalidProducts = currentProducts.filter(p => !p.name || p.name.trim() === '');
      if (invalidProducts.length > 0) {
        showToast('All products must have a name');
        return;
      }

      try {
        const response = await fetch(`/admin/panels/${currentEditingPanelId}/products`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ products: currentProducts })
        });

        const result = await response.json();
        if (result.success) {
          showToast('Products saved successfully!');
          document.getElementById('products-modal').classList.remove('show');
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast('Failed to save products');
        }
      } catch (error) {
        console.error('Save error:', error);
        showToast('Error saving products');
      }
    }
  </script>
</body>
</html>
