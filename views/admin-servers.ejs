<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Servers - Phantom ACO Admin</title>
  <link rel="stylesheet" href="/css/dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="shell">
    <!-- Header -->
    <header class="header">
      <div class="header-inner">
        <div class="brand">
          <div class="brand-mark"></div>
          <span class="brand-name"><%= brandName || 'Phantom ACO' %></span>
          <span style="margin-left: 12px; padding: 4px 12px; background: rgba(239, 68, 68, 0.2); color: #ef4444; border-radius: 999px; font-size: 0.75rem; font-weight: 600;">ADMIN</span>
        </div>
        <div class="header-actions">
          <a href="/admin" class="btn btn-ghost">Admin Home</a>
          <a href="/dashboard" class="btn btn-ghost">User Dashboard</a>
          <a href="/admin/logout" class="btn btn-ghost">Logout</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="toolbar">
        <h1 class="title">Manage Discord Servers</h1>
        <button class="btn btn-primary" id="add-server-btn">+ Add New Server</button>
      </div>

      <div class="info-card" style="margin-bottom: 24px; padding: 16px; background: rgba(59, 130, 246, 0.1); border: 1px solid rgba(59, 130, 246, 0.2); border-radius: 12px;">
        <h3 style="margin: 0 0 8px 0; color: #60a5fa;">‚ÑπÔ∏è Server Management</h3>
        <p style="margin: 0; color: var(--muted); font-size: 0.875rem;">Only users from registered Discord servers with the required role can access the ACO dashboard. Add or remove servers here.</p>
      </div>

      <!-- Servers Table -->
      <div class="submissions-table">
        <table>
          <thead>
            <tr>
              <th>Server ID</th>
              <th>Server Name</th>
              <th>Required Role</th>
              <th>Users</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (servers.length === 0) { %>
              <tr>
                <td colspan="7" style="text-align: center; padding: 40px; color: var(--muted);">
                  No servers registered yet. Click "Add New Server" to get started.
                </td>
              </tr>
            <% } else { %>
              <% servers.forEach(server => { %>
                <tr data-server-id="<%= server.id %>">
                  <td><code style="font-size: 0.75rem;"><%= server.server_id %></code></td>
                  <td><strong><%= server.server_name %></strong></td>
                  <td>
                    <div class="badge badge-info"><%= server.required_role_name %></div>
                  </td>
                  <td><%= server.user_count %> users</td>
                  <td>
                    <% if (server.is_active) { %>
                      <div class="badge badge-success">Active</div>
                    <% } else { %>
                      <div class="badge" style="background: rgba(148, 163, 184, 0.2); color: var(--muted);">Inactive</div>
                    <% } %>
                  </td>
                  <td><%= new Date(server.created_at).toLocaleDateString() %></td>
                  <td>
                    <div class="submission-actions">
                      <button class="btn btn-sm btn-primary edit-server-btn" data-server-id="<%= server.id %>">‚úèÔ∏è Edit</button>
                      <button class="btn btn-sm btn-danger delete-server-btn" data-server-id="<%= server.id %>">üóëÔ∏è Delete</button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Edit Server Modal -->
  <div id="edit-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true">
      <div class="dialog-header">
        <h2>Edit Server</h2>
        <button class="icon-btn close-edit-modal" aria-label="Close">‚úï</button>
      </div>
      <div class="dialog-body">
        <form id="server-form" class="form-grid">
          <input type="hidden" id="server-id">

          <div class="field wide">
            <label class="label">Server Name</label>
            <input type="text" id="server-name" class="control" required>
          </div>

          <div class="field wide">
            <label class="label">Required Role Name</label>
            <input type="text" id="required-role" class="control" required>
            <small style="color: var(--muted); display: block; margin-top: 4px;">Users must have this role to access the dashboard</small>
          </div>

          <div class="field">
            <label class="label">Status</label>
            <select id="is-active" class="control">
              <option value="1">Active</option>
              <option value="0">Inactive</option>
            </select>
          </div>
        </form>
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost close-edit-modal">Cancel</button>
        <button class="btn btn-primary" id="save-server-btn">Save Changes</button>
      </div>
    </div>
  </div>

  <!-- Add Server Modal -->
  <div id="add-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true">
      <div class="dialog-header">
        <h2>Add New Server</h2>
        <button class="icon-btn close-add-modal" aria-label="Close">‚úï</button>
      </div>
      <div class="dialog-body">
        <form id="add-server-form" class="form-grid">
          <div class="field wide">
            <label class="label">Discord Server ID</label>
            <input type="text" id="add-server-id" class="control" required>
            <small style="color: var(--muted); display: block; margin-top: 4px;">Enable Developer Mode in Discord, right-click your server, and copy the ID</small>
          </div>

          <div class="field wide">
            <label class="label">Server Name</label>
            <input type="text" id="add-server-name" class="control" required>
          </div>

          <div class="field wide">
            <label class="label">Required Role Name</label>
            <input type="text" id="add-required-role" class="control" value="ACO" required>
            <small style="color: var(--muted); display: block; margin-top: 4px;">Users must have this role to access the dashboard</small>
          </div>
        </form>
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost close-add-modal">Cancel</button>
        <button class="btn btn-primary" id="create-server-btn">Add Server</button>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="toast" class="toast" aria-live="polite"></div>

  <script>
    let servers = <%- JSON.stringify(servers) %>;

    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    function editServer(id) {
      const server = servers.find(s => s.id === id);
      if (!server) {
        showToast('Server not found');
        return;
      }

      document.getElementById('server-id').value = server.id;
      document.getElementById('server-name').value = server.server_name;
      document.getElementById('required-role').value = server.required_role_name;
      document.getElementById('is-active').value = server.is_active ? '1' : '0';

      document.getElementById('edit-modal').classList.add('show');
    }

    async function saveServer() {
      const id = document.getElementById('server-id').value;
      const data = {
        server_name: document.getElementById('server-name').value,
        required_role_name: document.getElementById('required-role').value,
        is_active: document.getElementById('is-active').value === '1'
      };

      try {
        const response = await fetch(`/admin/api/servers/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          showToast('Server updated successfully!');
          document.getElementById('edit-modal').classList.remove('show');
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast('Failed to update server');
        }
      } catch (error) {
        console.error('Save error:', error);
        showToast('Error updating server');
      }
    }

    async function createServer() {
      const data = {
        server_id: document.getElementById('add-server-id').value,
        server_name: document.getElementById('add-server-name').value,
        required_role_name: document.getElementById('add-required-role').value
      };

      try {
        const response = await fetch('/admin/api/servers', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          showToast('Server added successfully!');
          document.getElementById('add-modal').classList.remove('show');
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast(result.error || 'Failed to add server');
        }
      } catch (error) {
        console.error('Create error:', error);
        showToast('Error adding server');
      }
    }

    async function deleteServer(id) {
      if (!confirm('Are you sure you want to delete this server? Users from this server will lose access.')) return;

      try {
        const response = await fetch(`/admin/api/servers/${id}`, {
          method: 'DELETE',
          credentials: 'same-origin'
        });

        const result = await response.json();
        if (result.success) {
          showToast('Server deleted successfully!');
          const row = document.querySelector(`tr[data-server-id="${id}"]`);
          if (row) row.remove();
        } else {
          showToast('Failed to delete server');
        }
      } catch (error) {
        console.error('Delete error:', error);
        showToast('Error deleting server');
      }
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', () => {
      // Edit buttons
      document.querySelectorAll('.edit-server-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const serverId = parseInt(btn.getAttribute('data-server-id'));
          editServer(serverId);
        });
      });

      // Delete buttons
      document.querySelectorAll('.delete-server-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const serverId = parseInt(btn.getAttribute('data-server-id'));
          deleteServer(serverId);
        });
      });

      // Add server button
      document.getElementById('add-server-btn').addEventListener('click', () => {
        document.getElementById('add-modal').classList.add('show');
      });

      // Close modals
      document.querySelectorAll('.close-edit-modal').forEach(btn => {
        btn.addEventListener('click', () => {
          document.getElementById('edit-modal').classList.remove('show');
        });
      });

      document.querySelectorAll('.close-add-modal').forEach(btn => {
        btn.addEventListener('click', () => {
          document.getElementById('add-modal').classList.remove('show');
        });
      });

      // Save/Create buttons
      document.getElementById('save-server-btn').addEventListener('click', saveServer);
      document.getElementById('create-server-btn').addEventListener('click', createServer);
    });
  </script>
</body>
</html>
