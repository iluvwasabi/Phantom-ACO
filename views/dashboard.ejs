            <a href="/admin" class="btn btn-primary">Admin Dashboard</a>
            <a href="/admin/panels" class="btn btn-primary">Manage Panels</a>
            <a href="/admin/settings" class="btn btn-primary">Login Settings</a>
          </div>
        </div>
      </div>
      <% } %>

