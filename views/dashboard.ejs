<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Phantom ACO - Dashboard</title>
  <link rel="stylesheet" href="/css/dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="shell">
    <!-- Header -->
    <header class="header">
      <div class="header-inner">
        <div class="brand">
          <% if (logo && logo.startsWith('/uploads/')) { %>
            <img src="<%= logo %>" alt="Logo" style="width: 80px; height: 80px; border-radius: 8px; object-fit: contain; margin-right: 12px;">
          <% } else { %>
            <div style="font-size: 3.6rem; margin-right: 8px;"><%= logo || 'ğŸ‘»' %></div>
          <% } %>
          <span class="brand-name"><%= brandName || 'Phantom ACO' %></span>
        </div>
        <div class="header-actions">
          <% if (userServers && userServers.length > 1) { %>
          <div style="position: relative;">
            <select id="server-selector" style="padding: 8px 12px; background: var(--surface-100); border: 1px solid var(--border); border-radius: 8px; color: var(--text-900); font-size: 0.9rem; cursor: pointer;">
              <% userServers.forEach(server => { %>
                <option value="<%= server.server_id %>" <%= selectedServer && selectedServer.server_id === server.server_id ? 'selected' : '' %>>
                  ğŸ–¥ï¸ <%= server.server_name %>
                </option>
              <% }); %>
            </select>
          </div>
          <% } %>
          <div class="chip">
            <% if (user.discord_avatar) { %>
              <img src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.discord_avatar %>.png" alt="Avatar" style="width:24px; height:24px; border-radius:50%;">
            <% } %>
            <%= user.discord_username %>
          </div>
          <a href="/auth/logout" class="btn btn-ghost">Logout</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <% if (isAdmin) { %>
      <!-- Admin Panel -->
      <div style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.3); border-radius: var(--radius-lg); padding: var(--space-6); margin-bottom: var(--space-8);">
        <div style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: var(--space-4);">
          <div>
            <h3 style="margin: 0 0 var(--space-2) 0; color: #ef4444; font-size: 1.1rem; font-weight: 700;">âš™ï¸ Administrator Panel</h3>
            <p style="margin: 0; color: var(--muted); font-size: 0.9rem;">Manage service panels and customize the login page</p>
          </div>
          <div style="display: flex; gap: var(--space-3); flex-wrap: wrap;">
            <a href="/admin" class="btn btn-primary">Admin Dashboard</a>
            <a href="/admin/panels" class="btn btn-primary">Manage Panels</a>
            <a href="/admin/settings" class="btn btn-primary">Login Settings</a>
          </div>
        </div>
      </div>
      <% } %>

      <div class="toolbar">
        <h1 class="title">Available Services</h1>
        <div style="display: flex; gap: var(--space-3); align-items: center;">
          <div class="chip">
            ğŸ“Š <%= Object.keys(subscribedServices).length %> Active
          </div>
          <div class="chip" style="background: rgba(16, 185, 129, 0.1); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2);">
            ğŸ‰ <%= user.successful_orders_count || 0 %> Successful Orders
          </div>
          <a href="/changelog" class="chip" style="text-decoration: none; cursor: pointer; background: rgba(16, 185, 129, 0.1); color: #10b981; border: 1px solid rgba(16, 185, 129, 0.2);">
            ğŸ“‹ What's New
          </a>
          <a href="/tos/view" class="chip" style="text-decoration: none; cursor: pointer; background: rgba(99, 102, 241, 0.1); color: #6366f1; border: 1px solid rgba(99, 102, 241, 0.2);">
            ğŸ“œ Terms of Service
          </a>
          <a href="/dashboard/submission-guide" class="chip" style="text-decoration: none; cursor: pointer; background: rgba(59, 130, 246, 0.1); color: #3b82f6; border: 1px solid rgba(59, 130, 246, 0.2);">
            ğŸ“„ Submission Guide
          </a>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="grid">
        <% servicePanels.forEach(panel => { %>
        <article class="card"
          data-id="<%= panel.service_id %>"
          data-title="<%= panel.service_name %>"
          data-description="<%= panel.description || '' %>"
          data-type="<%= panel.service_type %>"
          data-submissions="<%= JSON.stringify(subscribedServices[panel.service_id] || []) %>">
          <div class="card-body">
            <h3><%= panel.icon ? panel.icon + ' ' : '' %><%= panel.service_name %></h3>
            <p class="muted"><%
              if (panel.service_type === 'no_login') {
                %>No login required<%
              } else if (panel.service_id === 'target') {
                %>Requires account login<%
              } else if (panel.service_id === 'walmart') {
                %>Requires account login + iMap<%
              } else {
                %>Requires account login + iMap<%
              }
            %></p>
          </div>
          <div class="card-footer">
            <% if (panel.description) { %>
            <p class="muted" style="font-size: 0.9rem; margin-bottom: 0.75rem; white-space: pre-line;"><%= panel.description %></p>
            <% } %>
            <div class="card-status">
              <% if (subscribedServices[panel.service_id] && subscribedServices[panel.service_id].length > 0) { %>
                <div class="badge badge-success">âœ… Active</div>
              <% } else { %>
                <div class="badge badge-info">ğŸ”“ Available</div>
              <% } %>
            </div>
            <div class="inline-note">
              <%
                const currentCount = subscribedServices[panel.service_id] ? subscribedServices[panel.service_id].length : 0;
                const limit = panel.submission_limit || 0;
              %>
              ğŸ“„ <strong><%= currentCount %><% if (limit > 0) { %>/<%= limit %><% } %></strong> submission<%= currentCount === 1 ? '' : 's' %>
              <% if (limit > 0 && currentCount >= limit) { %>
                <span style="color: var(--danger); font-size: 0.85rem; margin-left: 4px;">(Limit reached)</span>
              <% } %>
            </div>
            <div class="card-actions">
              <button class="btn btn-primary" data-action="add-submission" data-service="<%= panel.service_id %>" <%= (limit > 0 && currentCount >= limit) ? 'disabled style="opacity: 0.5; cursor: not-allowed;"' : '' %>>
                <% if (limit > 0 && currentCount >= limit) { %>
                  ğŸš« Limit Reached
                <% } else { %>
                  + Add Submission
                <% } %>
              </button>
            </div>
          </div>
        </article>
        <% }) %>
      </div>

      <!-- My Submissions Section -->
      <div class="toolbar" style="margin-top: var(--space-10);">
        <h2 class="title" style="font-size: clamp(20px, 2vw, 24px);">My Submissions</h2>
      </div>

      <div id="submissions-list">
        <!-- Submissions will be loaded here dynamically -->
        <div style="text-align: center; padding: var(--space-8); color: var(--muted);">
          Loading submissions...
        </div>
      </div>
    </div>
  </div>

  <!-- Submission Modal -->
  <div id="submission-modal" class="modal" aria-hidden="true">
    <div class="dialog animate-in" role="dialog" aria-modal="true">
      <div class="dialog-header">
        <h2 id="modal-title">Add Submission</h2>
        <button class="icon-btn" data-action="close-modal" aria-label="Close">âœ•</button>
      </div>
      <div class="dialog-body" id="modal-body">
        <!-- Form will be injected here -->
      </div>
      <div class="dialog-footer">
        <button class="btn btn-ghost" data-action="cancel">Cancel</button>
        <button class="btn btn-primary" data-action="submit-form" id="submit-btn">Submit</button>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="toast" class="toast" aria-live="polite"></div>

  <script src="/js/dashboard-app.js"></script>
  <script>
    // Server switcher
    const serverSelector = document.getElementById('server-selector');
    if (serverSelector) {
      serverSelector.addEventListener('change', async (e) => {
        const serverId = e.target.value;

        try {
          const response = await fetch('/dashboard/switch-server', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            credentials: 'same-origin',
            body: JSON.stringify({ serverId })
          });

          if (response.ok) {
            // Reload the page to refresh with new server context
            window.location.reload();
          } else {
            alert('Failed to switch server. Please try again.');
          }
        } catch (error) {
          console.error('Error switching server:', error);
          alert('Error switching server. Please try again.');
        }
      });
    }
  </script>
</body>
</html>
